{
  "extends": ["config:recommended", ":dependencyDashboard"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/mantinedev/mantine"],
      "groupName": "Mantine monorepo packages"
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchCurrentVersion": "!/^0/"
    }
  ]
}
